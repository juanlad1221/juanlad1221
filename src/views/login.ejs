<script>
    let btn = document.getElementById('btn');
    let user = document.getElementById('user');
    let password = document.getElementById('password')

    user.onclick = () => {
        user.value = ''
    }
    password.onclick = () => {
        password.value = ''
    }

    btn.onclick = () => {
        let user = document.getElementById('user').value;
        let password = document.getElementById('password').value

        if (user == '' || user == ' ' || user == null) { alert('Error: El Campo NO puede estar vacio'); return false }
        if (password == '' || password == ' ' || password == null) { alert('Error: El Campo NO puede estar vacio'); return false }
    
    }//end
</script>